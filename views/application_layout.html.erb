<!DOCTYPE html>
<html>
  <head>
    <title>RPS Sinatra</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <style>
      .navbar {
        display: flex;
        flex-direction: column;
      }
    </style>
  </head>
  
  <body>
  <div class="navbar">
      <a href="/rock">Play Rock</a>
      <a href="/paper">Play Paper</a>
      <a href="/scissors">Play Scissors</a>
  </div>

  <%if @player_choice%>
    <h2>We played <%= @player_choice %>!</h2>
    <h2>They played <%= @computer_choice %>!</h2>
    <%= yield %>

    <div class="navbar">
      <a href="/">Rules</a>
  <% else %>
    <%= yield %>
  <% end %>
    </div>
  </body>
</html>
